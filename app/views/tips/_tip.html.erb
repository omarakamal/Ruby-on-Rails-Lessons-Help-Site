
<div class="card">
  <h5 class="card-header">Lesson name:
 <%= tip.lesson_name %></h5>
  <div class="card-body">
    <h5 class="card-title">Author: <%= tip.creator %>
</h5>
    <p class="card-text"><%= tip.description %>
</p>
    <h6 class="card-title">Helpful Links: <%= tip.helpful_links %>
</h6>

<div>
  <%= link_to "Edit this tip", edit_tip_path(@tip), class:"btn btn-secondary" %> |
  <%= link_to "Back to tips", tips_path, class:"btn btn-primary" %>
  <br></br>

  <%= button_to "Delete this tip", @tip, method: :delete, class:"btn btn-danger" %>
</div>
  </div>
</div>
